{
	"compilerOptions": {
		"baseUrl": "./",
		"experimentalDecorators": true,
		"inlineSources": true,
		"lib": [
			"dom",
			"es5",
			"es2015.iterable",
			"es2015.promise",
			"es2015.symbol",
			"es2015.symbol.wellknown"
		],
		"module": "umd",
		"moduleResolution": "node",
		"noUnusedLocals": true,
		"paths": {
			"postcss-*": [ "./types/postcss-*" ]
		},
		"outDir": "dev",
		"removeComments": false,
		"rootDir": ".",
		"sourceMap": true,
		"strict": true,
		"target": "es5",
		"types": [
			"intern",
			"monaco-editor",
			"typescript"
		]
	},
	"include": [
		"./src/**/*.ts",
		"./tests/**/*.ts",
		"./support/intern/Reporter.ts"
	]
}
