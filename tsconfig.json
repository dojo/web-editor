{
	"compilerOptions": {
		"experimentalDecorators": true,
		"inlineSources": true,
		"lib": [
			"dom",
			"es5",
			"es2015.iterable",
			"es2015.symbol",
			"es2015.symbol.wellknown"
		],
		"module": "umd",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"outDir": "dev",
		"removeComments": false,
		"rootDir": ".",
		"sourceMap": true,
		"strictNullChecks": true,
		"target": "es5",
		"types": [
			"intern",
			"monaco-editor",
			"typescript"
		]
	},
	"include": [
		"./src/**/*.ts",
		"./tests/**/*.ts"
	]
}